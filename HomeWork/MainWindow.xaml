<Window x:Class="HomeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
   
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="Images/top2.jpg" Stretch="Fill"/>
        <Grid HorizontalAlignment="Center" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Name="StartStudent" Grid.Row="0" Content="点击跳转到学生登陆界面" Height="30" Click="StartStudent_Click"/>
            <Button Name="StartTeacher" Grid.Row="1" VerticalAlignment="Top" Content="点击跳转到教工登陆界面" Height="30" Click="StartTeacher_Click"/>
        </Grid>
    </Grid>
</Window>
